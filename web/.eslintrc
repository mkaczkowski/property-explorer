{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "plugins": ["jest"],
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "rules": {
    "arrow-parens": "off",
    "comma-dangle": "off",
    "implicit-arrow-linebreak": "off",
    "lines-between-class-members": "off",
    "max-len": ["error", { "code": 120 }],
    "no-confusing-arrow": "off",
    "no-console": "error", // airbnb is using warn
    "no-return-assign": "off", // airbnb use error, handy for react ref assign.
    "object-curly-newline": "off",
    "operator-linebreak": ["error", "after"], // aibnb is disabling this rule
    "react/destructuring-assignment": "off",
    "react/jsx-filename-extension": ["error", { "extensions": [".js"] }], // airbnb is using .jsx
    "react/jsx-max-props-per-line": ["error", { "maximum": 7 }], // airbnb is disabling this rule
    "react/jsx-one-expression-per-line": "off",
    "react/no-danger": "error", // airbnb is using warn
    "react/no-direct-mutation-state": "error", // airbnb is disabling this rule
    "react/prop-types": "off", // disable prop tyles check
    "react/require-default-props": "off",
    "react/sort-comp": "off",
    "spaced-comment": "off",
    "prefer-destructuring": "off",
    "jsx-a11y/label-has-for": "off",
    "jsx-a11y/label-has-associated-control": "off",
    "no-trailing-spaces": "off",
    "no-underscore-dangle": "off"
  }
}
